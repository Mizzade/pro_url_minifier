{
  "nodeModulesDir": "auto",
  "imports": {
    "express": "npm:express@^5.1.0",
    "@prisma/client": "npm:@prisma/client@^6.13.0",
    "nanoid": "npm:nanoid@^5.1.5",
    "valid-url": "npm:valid-url@^1.0.9",

    "prettier": "npm:prettier@^3.6.2"
  },
  "tasks": {
    "dev": "deno run -A --watch ./src/server.ts",

    "docker:dev:up": "docker-compose -p url_minifier_dev -f ../docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -p url_minifier_dev -f ../docker-compose.dev.yml down",

    "prettier:check": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src"
  }

}
